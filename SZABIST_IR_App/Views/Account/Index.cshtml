</html>
<script>
    $(document).ready(function () {
        var mymodal, loading;
        function ShowProgress() {
            mymodal = document.createElement("DIV");
            mymodal.className = "modal";
            document.body.appendChild(mymodal);
            loading = document.getElementsByClassName("loading")[0];
            loading.style.display = "block";
            var top = Math.max(window.innerHeight / 2 - loading.offsetHeight / 2, 0);
            var left = Math.max(window.innerWidth / 2 - loading.offsetWidth / 2, 0);
            loading.style.top = top + "px";
            loading.style.left = left + "px";
        };

        function HideProgress() {
            document.body.removeChild(mymodal);
            loading.style.display = "none";
        };

        $("#btnLogin").click(function (e) {
            $('#error').html('');
            ShowProgress();
            var data = {
                "userid": $("#uName").val(),
                "password": $("#uPass").val()
            };

            if (data.userid == '')
            {
                HideProgress();
                $("#uName").focus();
            }
            else if (data.password == '') {
                HideProgress();
                $("#uPass").focus();
            }
            else {
                e.preventDefault();
                $(".theme-loader").show();
                $.ajax({
                    url: "@Url.Action("ValidateUser", "Account")",
                    type: "POST",
                    data: JSON.stringify(data),
                    dataType: "json",
                    contentType: "application/json",
                    success: function (response) {
                        if (response.Success == true) {
                            window.location.href = "@Url.Action("Index", "Home")";
                        } else {
                            HideProgress();
                            $('#error').html("Invalid UserID Or Password!")
                           
                        }
                    },
                    error: function () {
                        HideProgress();
                        console.log('Login Fail!!!');
                    }
                });
            }
        })
    })
</script>