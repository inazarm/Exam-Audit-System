                                @*var zabDeskURL = @System.Configuration.ConfigurationManager.AppSettings["zabDeskURL"].ToString();
                                <input type="hidden" value="@zabDeskURL" id="zabDeskURL" />*@
                                <input type="hidden" value="@ViewBag.zabdestURL" id="zabDeskURL" />
