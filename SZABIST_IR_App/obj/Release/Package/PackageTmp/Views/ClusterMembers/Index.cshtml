@model IEnumerable<SZABIST_IR_App.Models.CreateClusterHead>

@{
    ViewBag.Title = "Index";
}
<div class="card-header">
    <h5>CLUSTER HEAD SETUP</h5>
    <a href='@Url.Action("Create")' class="btn btn-outline-dark btn-sm float-right"><i class="ti-plus font-weight-bold"></i><b>ASSIGN NEW HEAD</b></a>
</div>

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card justify-content-center table-responsive">
                <table class="table table-bordered" id="clusterInfo" style="width:100%">
                    <thead style="background: #203F9A!important;color:white">
                        <tr>
                            <th>
                                @Html.DisplayName("S.No")
                            </th>
                            <th>
                                @Html.DisplayName("Cluster Title")
                            </th>
                            <th>
                                @Html.DisplayName("Head Name")
                            </th>
                            <th>
                                @Html.DisplayName("WEF-Date")
                            </th>
                            <th>
                                @Html.DisplayName("Action")
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 0;
                            foreach (var item in Model)
                            {
                                i++;
                                <tr>
                                    <td>
                                        @i
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ClusterTitle)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ClusterHeadName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.WEF_From)
                                    </td>
                                    <td>
                                        <a class="mytooltip" href="javascript:void(0)">
                                            @Html.ActionLink(" Edit", "Edit", new { id = item.tCluster_Head_Id }, new { @Class = "btn btn-outline-primary btn-sm ti-pencil-alt" })
                                            <span class="tooltip-content5" style="width:105px;margin:0 0 10px -60px">
                                                <span class="tooltip-text3" style="font-size:2vh;">
                                                    <span class="tooltip-inner2" style="margin:0;padding:0;">
                                                        To overwrite Current Cluster Head
                                                    </span>
                                                </span>
                                            </span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

