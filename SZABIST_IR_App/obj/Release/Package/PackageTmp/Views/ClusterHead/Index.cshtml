                         }
                     },
                     error: function (e, ts, et) {
                         alert(ts);
                     }
                 });
             }
        });

        function removeDuplicate() {
            $("#Program option").val(function (idx, val) {
                $(this).siblings('[value="' + val + '"]').remove();
            });
        }
    })
